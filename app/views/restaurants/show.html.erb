
<div class="menu-container" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @restaurant.photo.key, height: 300, crop: :fill %>')">
  <h1 class="title"> <%=@restaurant.name%>'s Menu </h1>

  <div class="solid-line"></div>

  <div class="dish-container">
      <% @restaurant.dishes.each do |dish| %>
      <div class="menu-items">
          <div class="menu-item-title"><strong><%= dish.recipe.name %></strong></div>
          <div class="menu-text-container">
            <i><%= dish.description %></i> - Â£<%= dish.price %>
            <br>
            <%= dish.is_available ? "This dish is currently available" : "This dish is currently unavailable" %>
            <br>
            <%= link_to "See nutritional breakdown", dish_path(dish) %>
          </div>
      </div>
      <%end%>
  </div>
</div>
